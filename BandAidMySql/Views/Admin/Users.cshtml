@model BandAidMySql.Models.Users
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">
    <!-- Title Page-->
    <title>Index</title>
    <!-- Fontfaces CSS-->
    <link href="~/AdminTemplate/css/font-face.css" rel="stylesheet" media="all">
    <link href="~/AdminTemplate/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/AdminTemplate/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/AdminTemplate/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <!-- Bootstrap CSS-->
    <link href="~/AdminTemplate/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">
    <!-- Vendor CSS-->
    <link href="~/AdminTemplate/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/AdminTemplate/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/AdminTemplate/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/AdminTemplate/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/AdminTemplate/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/AdminTemplate/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/AdminTemplate/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">
    <!-- Main CSS-->
    <link href="~/AdminTemplate/css/theme.css" rel="stylesheet" media="all">
</head>
<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER DESKTOP-->
        <header class="header-desktop3 d-none d-lg-block">
            <div class="section__content section__content--p35">
                <div class="header3-wrap">
                    <div class="header__logo">
                        <a asp-action="Index" asp-controller="Admin">
                            <img src="~/AdminTemplate/images/icon/BandAid.png" alt="BandAid" />
                        </a>
                    </div>
                    <div class="header__navbar">
                        <ul class="list-unstyled">
                            <li>
                                <a asp-action="Index" asp-controller="Admin">
                                    <i class="fas fa-address-book-o"></i>Početna
                                    <span class="bot-line"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Admin" asp-action="Users">
                                    <i class="fas fa-tachometer-alt"></i>Popis korisnika
                                    <span class="bot-line"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Admin" asp-action="Events">
                                    <i class="fas fa-shopping-basket"></i>
                                    <span class="bot-line"></span>Popis evenata
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="header__tool">

                        <div class="account-wrap">
                            <div class="account-item account-item--style2 clearfix js-item-menu">
                                <div class="image">
                                    <img src="~/AdminTemplate/images/icon/avatar-01.jpg" alt="Admin" />
                                </div>
                                <div class="content">
                                    <a class="js-acc-btn" asp-action="Home" asp-controller="Admin">@Model.Name</a>
                                </div>
                                <div class="account-dropdown js-dropdown">
                                    <div class="info clearfix">
                                        <div class="image">
                                            <a href="#">
                                                <img src="~/AdminTemplate/images/icon/avatar-01.jpg" alt="Admin" />
                                            </a>
                                        </div>
                                        <div class="content">
                                            <h5 class="name">
                                                <a>@Model.Name</a>
                                            </h5>
                                            <span class="email">@Model.Email</span>
                                        </div>
                                    </div>
                                    <div class="account-dropdown__body">


                                    </div>
                                    <div class="account-dropdown__footer">
                                        <a asp-controller="User" asp-action="Logout">
                                            <i class="zmdi zmdi-power"></i>Odjava
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- END HEADER DESKTOP-->
        <!-- HEADER MOBILE-->
        <header class="header-mobile header-mobile-2 d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a class="logo" asp-action="Index" asp-controller="Admin">
                            <img src="~/AdminTemplate/images/icon/BandAid.png" alt="BandAid" />
                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <nav class="navbar-mobile">
                <div class="container-fluid">
                    <ul class="navbar-mobile__list list-unstyled">
                        <li>
                            <a asp-action="Index" asp-controller="Admin">
                                <i class="fas fa-address-book-o"></i>Početna

                            </a>
                        </li>
                        <li>
                            <a asp-action="Users" asp-controller="Admin">
                                <i class="fas fa-tachometer-alt"></i>Popis korisnika
                            </a>
                        </li>
                        <li>
                            <a asp-action="Events" asp-controller="Admin">
                                <i class="fas fa-chart-bar"></i>Popis evenata
                            </a>
                        </li>

                    </ul>
                </div>
            </nav>
        </header>
        <div class="sub-header-mobile-2 d-block d-lg-none">
            <div class="header__tool">


                <div class="account-wrap">
                    <div class="account-item account-item--style2 clearfix js-item-menu">
                        <div class="image">
                            <img src="images/icon/avatar-01.jpg" alt="Admin" />
                        </div>
                        <div class="content">
                            <a class="js-acc-btn">@Model.Name</a>
                        </div>
                        <div class="account-dropdown js-dropdown">
                            <div class="info clearfix">
                                <div class="image">
                                    <a>
                                        <img src="images/icon/avatar-01.jpg" alt="Admin" />
                                    </a>
                                </div>
                                <div class="content">
                                    <h5 class="name">
                                        <a>@Model.Name</a>
                                    </h5>
                                    <span class="email">@Model.Email</span>
                                </div>
                            </div>
                            <div class="account-dropdown__body">



                            </div>
                            <div class="account-dropdown__footer">
                                <a asp-action="Logout" asp-controller="User">
                                    <i class="zmdi zmdi-power"></i>Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END HEADER MOBILE -->
        <!-- PAGE CONTENT-->
        <div class="page-content--bgf7">
            <!-- BREADCRUMB-->
            <section class="au-breadcrumb2">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="au-breadcrumb-content">
                                <div class="au-breadcrumb-left">

                                </div>
                                <form class="au-form-icon--sm" asp-action="Users" method="post">
                                    <input class="au-input--w300 au-input--style2" value="@ViewBag.SearchString" name="searchString" type="text" placeholder="Unesite pojam">

                                    <button class="au-btn--submit2" type="submit">
                                        <i class="zmdi zmdi-search"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END BREADCRUMB-->
            <!-- WELCOME-->
            <section class="welcome p-t-10">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="title-4">
                                Dobrodošli,
                                <span>@Model.Name!</span>
                            </h1>
                            <hr class="line-seprate">
                        </div>
                    </div>
                </div>
            </section>
            <!-- END WELCOME-->
            <!-- DATA TABLE-->
            <section class="p-t-20">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="title-5 m-b-35">Svi Korisnici</h3>
                            <div class="table-data__tool">
                                <form role="form" asp-action="Users" asp-controller="Admin" method="post">
                                    <div class="table-data__tool-left">
                                        <div class="rs-select2--light rs-select2--md">
                                            <select class="js-select2" id="uloga" name="uloga">
                                                <option selected="selected" disabled="disabled">Uloga</option>
                                                <option value="Admin">Admin</option>
                                                <option value="Izvodac">Izvođač</option>
                                                <option value="Organizator">Organizator</option>
                                            </select>
                                            <div class="dropDownSelect2"></div>
                                        </div>
                                        <div class="rs-select2--light rs-select2--sm">
                                            <select class="js-select2" id="status" name="status">
                                                <option selected="selected" disabled="disabled">Status</option>
                                                <option value="True">Potvrđen</option>
                                                <option value="False">Čeka potvrdu</option>
                                            </select>
                                            <div class="dropDownSelect2"></div>
                                        </div>
                                        <button class="au-btn-filter" type="submit">
                                            <i class="zmdi zmdi-filter-list"></i>Filtriraj
                                        </button>
                                        <button class="au-btn-filter" asp-action="Users">
                                            <i class="zmdi zmdi-filter-frames"></i>Obriši filter
                                        </button>
                                    </div>
                                </form>
                                <div class="table-data__tool-right">
                                    <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
                                        <select class="js-select2" name="type">
                                            <option selected="selected">Eksport</option>
                                            <option value="PDF">PDF</option>

                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive table-responsive-data2">
                                <table class="table table-data2">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Ime</th>
                                            <th>Email</th>
                                            <th>Adresa</th>
                                            <th>Telefon</th>
                                            <th>Uloga</th>
                                            <th>Aktiviran</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Users r in ViewBag.Korisnici)
                                        {

                                            <tr class="tr-shadow">

                                                <td id="UserId">@r.UserId</td>
                                                <td>@r.Name</td>
                                                <td>
                                                    <span class="block-email" id="UserEmail"><strong>@r.Email</strong></span>
                                                </td>
                                                <td class="desc">@r.Street</td>
                                                <td>@r.PhoneNumber</td>
                                                <td>
                                                    @{
                                                        int id = r.RoleId;
                                                        switch (id)
                                                        {
                                                            case 1:

                                                                <text>
                                                                    <span class="role admin">Admin</span>
                                                                </text>
                                                                break;
                                                            case 2:
                                                                <text>
                                                                    <span class="role member">Izvođač</span>
                                                                </text>
                                                                break;
                                                            case 3:
                                                                <text>
                                                                    <span class="role user">Organizator</span>
                                                                </text>
                                                                break;
                                                        }
                                                    }

                                                </td>
                                                <td>
                                                    @{
                                                        int statement = r.IsEmailVerified;
                                                        switch (statement)
                                                        {
                                                            case 1:

                                                                <text>
                                                                    <span class="status--process">Potvrđen</span>
                                                                </text>
                                                                break;
                                                            case 0:
                                                                <text>
                                                                    <span class="status--denied">Čeka potvrdu</span>
                                                                </text>
                                                                break;

                                                        }
                                                    }
                                                </td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <button class="item" data-placement="top" data-toggle="modal" data-id="@r.Email" data-target="#mediumModal" title="Briši">
                                                            <i class="zmdi zmdi-delete"></i>
                                                        </button>
                                                        <button class="item" data-toggle="tooltip" data-placement="top" title="Poruka">
                                                            <i class="zmdi zmdi-mail-send"></i>
                                                        </button>
                                                        <button onclick="location.href='/Admin/UserView?id=@r.UserId'" class="item" data-toggle="tooltip" data-placement="top" title="Profil">
                                                            <i class="zmdi zmdi-account"></i>
                                                        </button>
                                                    </div>
                                                </td>

                                            </tr>
                                            <tr class="spacer"></tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Modalni prozor -->
            <div class="modal fade" data-backdrop="static" data-keyboard="false" id="mediumModal" tabindex="-1" role="dialog" aria-labelledby="mediumModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="mediumModalLabel">Potvrda</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p class="parent">
                                Želite nastaviti s akcijom? Korisnik <strong class="idhere" id="EmailDelete"></strong> će biti trajno izbrisan iz sistema!
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Odbaci</button>
                            <button type="button" class="btn btn-primary" id="zatvori" onclick="submitForm()">Potvrdi</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end Modalni Prozor -->
            <!-- END DATA TABLE-->
            <!-- COPYRIGHT-->
            <section class="p-t-60 p-b-20">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="copyright">
                                <p> Designed &amp; Developed by MEV Computer Science students</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END COPYRIGHT-->
        </div>
    </div>
    <!-- Jquery JS-->
    <script src="~/AdminTemplate/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/AdminTemplate/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/AdminTemplate/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/AdminTemplate/vendor/slick/slick.min.js"></script>
    <script src="~/AdminTemplate/vendor/wow/wow.min.js"></script>
    <script src="~/AdminTemplate/vendor/animsition/animsition.min.js"></script>
    <script src="~/AdminTemplate/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <script src="~/AdminTemplate/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/AdminTemplate/vendor/counter-up/jquery.counterup.min.js"></script>
    <script src="~/AdminTemplate/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/AdminTemplate/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/AdminTemplate/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/AdminTemplate/vendor/select2/select2.min.js"></script>
    <!-- Main JS-->
    <script>
        $(document).ready(function () {
            $('#mediumModal').on('show.bs.modal', function (e) {
                var id = $(e.relatedTarget).data('id');
                $(".idhere").html(id);
            });
        });
    </script>
    <script>
        function UserDetail() {

            var _user = {};
            _user.Email = $(".block-email").parent().find("strong").text();

            $.ajax({
            type: "POST",
            url: "@Url.Action("UserProcess")",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify(_user),
                success: function (response) {
                    var _user = JSON.parse(response);
                    var Email = _user.Email;
                    window.location.href = "@Url.Action("UserView","Admin", new { })"
            },
            failure: function (errMsg) {
                alert(errMsg);

            }
            });
        }
    </script>
    <script>
        function submitForm() {

            var _user = {};
            _user.Email = $(".parent").parent().find("strong").text();

            $("#mediumModal").modal("hide");
            $('body').removeClass("modal-open");
            $(".modal-backdrop").remove();
        $.ajax({
            type: "POST",
            url: "@Url.Action("DeleteUser")",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify(_user),
            success: function (response) {
                if (response == true) {

                    window.location.href ="/Admin/Users"

                }
            },
            failure: function (errMsg) {
                alert(errMsg);

            }
            });






    }

    </script>
    <script src="~/AdminTemplate/js/main.js"></script>


</body>
</html>